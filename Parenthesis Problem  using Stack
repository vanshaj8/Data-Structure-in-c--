#include <iostream>
#include<string.h>
using namespace std;
char stack[100];  // Stack Is declared globally
int top=-1;

void push(char x)
{
	top=top+1;
	stack[top]=x;
}

void pop(char t)
{
	if(stack[top]=='}')
	{
		top=top-1;
		// the  parenthesis {} is complete 
	}
	else if(stack[top]==')')
	{
		top=top-1;
		// the parenthesis is complete
	}
	else
	{
		top=top-1;
		// The parenthseis []is complete;
	}
}



void display()
{
	int i;
	
	cout<<"The gevien stack is ";
	if(top==-1)
	{
		cout<<"VALID";
	}
	else
	{
		cout<<"INVALID";
	}
}

int main()
{
	
	char str[36],x,t;
	cout<<"Enter the string";
	cin>>str;
	int  k,i;
	k=strlen(str);
	
	for(i=0;i<k;i++)
	{
		if(str[i]=='{'||str[i]=='['||str[i]=='(')
		{
			x=str[i];
			push(x);
		}
		else if(str[i]=='}'||str[i]==']'||str[i]==')')
		{
			t=str[i];
			pop(t);
		}
	}
	
	display();
	
	
	return 0;
}
